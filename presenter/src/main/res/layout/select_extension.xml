<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:background="@drawable/bg_10_rounding_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_dimension"
        android:textColor="@color/font_color"
        android:text="확장자를 선택해주세요"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnXls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".xls"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rectangle_stroke_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnXlsx"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnXlsx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".xlsx"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_rectangle_stroke_white"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@+id/btnXls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnXls"/>


</androidx.constraintlayout.widget.ConstraintLayout>